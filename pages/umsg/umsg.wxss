.hr{
  height: 1px;
  box-shadow: 0px 1px 10px #666;
}
.taber{
  display: flex;
  padding-top:20rpx;
  padding-bottom:20rpx;
  margin: auto;
  flex-direction: row;
  width: 100vw;
  justify-content: center;
  /* border-bottom: 1px solid #eee; */
}
.taber text{
  color:black;
  text-align: center;
  font-size: 32rpx;
  margin:0 20rpx;
  border-bottom: 2px solid white;
  display: block;
  padding-bottom: 8rpx;
}
.taber text.on{
  border-bottom: 2px solid skyblue;
}
.comment>.item{
  padding:20rpx 20rpx 40rpx 20rpx;
  border-bottom:1px solid rgb(206, 205, 205);
  display: flex;
  flex-direction: column;
  position: relative;
}
.isread{
    opacity: 0.6;
}
.comment .item  .info{
  display: flex;
  flex: 1;
}
.comment .item .info image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}
.comment .item .gf{
    position: relative;
     width: 80rpx;
    height: 80rpx;
}

.comment .item  .gf image{
    /* border: 1px solid red; */
}
.comment .item  .info .text{
   display: flex;
   flex-flow: column;
   margin-left: 5px;
   flex: 1;
}
.comment .nike{
  color:#222;
  font-size: 30rpx;
}
.comment .gwtitle{
    color:rgb(156, 77, 77);
}
.comment .msg{
  color:rgb(128, 124, 124);
  font-size: 26rpx;
}
.comment .item  .info .text .details{
  margin:20rpx 0;
  color:#666;
  font-size: 26rpx;
  display: -webkit-box ;
  overflow: hidden; /*隐藏溢出的文本  */
  text-overflow: clip;
  word-break: break-all;/*自动换行*/
  -moz-box-orient: vertical; /*从上到下自动排列子元素*/
  -webkit-box-orient: vertical; 
  -webkit-line-clamp:5; /*显示的行数*/
  text-align: justify;
}
.comment .item  .info .text .title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top:5rpx;
}
.comment .item  .info .text .time{
  color:#aaa;
  font-size: 26rpx;
  margin-bottom:5rpx;
}
.comment .item  .userdata{
  display: flex;
}
.comment .item  .userdata .comment{
  display: flex;
  flex-flow: row;
  align-items: center;
}
.comment .item  .userdata text{
  font-size: 30rpx;
  color:#aaa;
}
.comment .item  .userdata image{
   width: 30rpx;
   height: 30rpx;
}
.comment .tip{
  padding:16rpx 0px;
  background: rgb(241, 239, 239);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.comment .tip text{
  margin-left: 10px;
  color:rgb(133, 131, 131);
  font-size: 32rpx;
}
.comment .tip>view{
  display: flex;
  align-items: center;
  margin-right:10px;
}
.comment .tip>view text{
  font-size: 28rpx;
}
.comment .tip>view image{
  width: 40rpx;
  height: 40rpx;
}

.comment .item .pic_content{
  /* background: rgb(245, 245, 245); */
  border: 1px solid #eee;
  border-radius: 2px;
  padding:5px 10px;
}
.comment .item .pic_content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color:#666;
}
.comment .item .pic_content .title{
  display: -webkit-box ;
  overflow: hidden; /*隐藏溢出的文本  */
  text-overflow: clip;
  word-break: break-all;/*自动换行*/
  -moz-box-orient: vertical; /*从上到下自动排列子元素*/
  -webkit-box-orient: vertical; 
  -webkit-line-clamp:1; /*显示的行数*/
}
.comment .item .pic_content .left{
  display: flex;
  align-items: center;
  flex: 1;
}
.comment .item .pic_content .left text{
  font-size: 28rpx;
  color:#666;
}
.comment .item .pic_content .left .sometext .case_name{
  font-size: 26rpx;
  color:#aaa;
}
.comment .item .pic_content .left .picwrap {
  width: 80rpx;
  height: 80rpx;
}
.comment .item .pic_content .left .picwrap image{
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.comment .item .pic_content .sometext{
  flex: 1;
  margin:0 5px;
}
.comment .item .pic_content .right{
    display: flex;
    align-items: center;
}
.comment .item .pic_content .right text{
    font-size: 20rpx;
    display: block;
    max-width: 160rpx;
    background: rgb(245, 245, 245);
    border-radius: 4px;
    display: -webkit-box ;
    overflow: hidden; /*隐藏溢出的文本  */
    text-overflow: clip;
    word-break: break-all;/*自动换行*/
    -moz-box-orient: vertical; /*从上到下自动排列子元素*/
    -webkit-box-orient: vertical; 
    -webkit-line-clamp:3; /*显示的行数*/
    max-height: 80rpx;
    padding:0 5rpx;
}
.comment .item .pic_content .right image{
  width: 30rpx;
  height: 30rpx;
}
.new{
    position: absolute;
    color:black;
    width: 20rpx;
    height: 20rpx;
    text-align: center;
    display: block;
    line-break: 20rpx;
    background: red;
    border-radius: 100%;
    overflow: hidden;
    left: 10rpx;
    top:10rpx;
}