.comment>.item{
  padding:10px 10px;
  border-top:1px solid #eee;
}
.comment .item .user{
  display: flex;
  justify-content: space-between;
}
.comment .item .user .info{
  display: flex;
  align-items: center;
}
.comment .item .user .info image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}
.comment .item .user .info .text{
   display: flex;
   flex-flow: column;
   margin-left: 5px;
}
.comment .nike{
  color:#222;
  font-size: 30rpx;
}
.comment .msg{
  color:rgb(128, 124, 124);
  font-size: 30rpx;
}
.comment .item .user .info .text .time{
  color:#aaa;
  font-size: 30rpx;
}
.comment .item .user .userdata{
  display: flex;
  align-items: center;
}
.comment .item .user .userdata .comment{
  display: flex;
  flex-flow: row;
  align-items: center;
}
.comment .item .user .userdata text{
  font-size: 30rpx;
  margin-left: 2px;
  color:#aaa;
}
.comment .item .user .userdata image{
   width: 15px;
   height: 15px;
}
.comment .item .com_content{
  margin:5px 0;
}
.comment .item .com_content .listcon{
  font-size: 30rpx;
  margin:10px 0;
}
.comment .item .com_content .listcon text{
  display: inline-block;
}
.comment .item .pic_content{
  background: rgb(245, 245, 245);
  border-radius: 2px;
  padding:5px 10px;
}
.comment .item .pic_content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color:#666;
}
.comment .item .pic_content .title{
  display: -webkit-box ;
  overflow: hidden; /*隐藏溢出的文本  */
  text-overflow: clip;
  word-break: break-all;/*自动换行*/
  -moz-box-orient: vertical; /*从上到下自动排列子元素*/
  -webkit-box-orient: vertical; 
  -webkit-line-clamp:1; /*显示的行数*/
}
.comment .item .pic_content .left{
  display: flex;
  align-items: center;
}
.comment .item .pic_content .left text{
  font-size: 28rpx;
  color:#666;
}
.comment .item .pic_content .left .sometext .case_name{
  font-size: 26rpx;
  color:#aaa;
}
.comment .item .pic_content .left .picwrap {
  width: 80rpx;
  height: 80rpx;
}
.comment .item .pic_content .left .picwrap image{
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.comment .item .pic_content .sometext{
  flex: 1;
  margin:0 5px;
}
.comment .item .pic_content .right image{
  width: 30rpx;
  height: 30rpx;
}

.comment .tip{
  padding:8px 0px;
  background: rgb(241, 239, 239);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.comment .tip text{
  margin-left: 10px;
  color:rgb(133, 131, 131);
  font-size: 32rpx;
}
.comment .tip>view{
  display: flex;
  align-items: center;
  margin-right:10px;
}
.comment .tip>view text{
  font-size: 28rpx;
}
.comment .tip>view image{
  width: 40rpx;
  height: 40rpx;
}